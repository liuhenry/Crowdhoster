<%= form_for([:admin, @campaign, @update], html: { class: "campaign_form", id: "admin_campaign_update_form" }) do |f| %>

  <div class="field clearfix">
    <label>Title</label>
    <%= f.text_field :title, style: 'width:60%' %>
  </div>

  <div class="field clearfix">
    <p class="explanation">Date to display as the publish date.</p>
    <label>Publish Date</label>
    <%= f.text_field :publish_date, placeholder: "Click to select date", value: (@update.publish_date.blank? ? '' : @update.publish_date.strftime('%m/%d/%Y %I:%M %P %Z')) %>
  </div>

  <div class="field clearfix">
    <label>Body</label>
    <%= f.cktext_area :body %>
  </div>

  <%= f.submit "Save", :'class' => "btn btn-primary show_loader", :'data-loader' => "campaign_update_form" %>
  <span class="loader" data-loader="campaign_update_form" style="display:none"></span>

<% end %>
